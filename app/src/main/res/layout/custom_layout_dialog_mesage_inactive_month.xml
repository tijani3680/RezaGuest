<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:id="@+id/txt_customLayoutMesageInactiveMonth_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sahelsemibold"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/t59"
        android:textColor="@color/gray900"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_customLayoutMesageInactiveMonth_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txt_customLayoutMesageInactiveMonth_txt"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent" />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_customLayoutMesageInactiveMonth_line"
        android:id="@+id/cardDialog_customLayoutMesageInactiveMonth_btnClose"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/popaGreenApp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sahelbold"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/t60"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>





</RelativeLayout>
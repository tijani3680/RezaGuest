<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_fragmentDetailsBlockCustomer_Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorToolbar"
            android:layoutDirection="rtl">

            <ImageView
                android:id="@+id/img_fragmentDetailsBlockCustomer_imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:id="@+id/txt_fragmentDetailsBlockCustomer_CustomerName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fontFamily="@font/sahelbold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </RelativeLayout>


        <RelativeLayout

            android:layoutDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".view.fragments.FragmentDetailsBlockCustomer">

            <TextView
                android:id="@+id/txt_fragmentDetailsBlockCustomer_description"
                android:textColor="@color/gray800"
                android:textSize="16sp"
                android:fontFamily="@font/sahelsemibold"
                android:gravity="right"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



        </RelativeLayout>

    </LinearLayout>




</layout>


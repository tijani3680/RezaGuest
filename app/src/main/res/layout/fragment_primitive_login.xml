<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:background="@color/myfavoriteBg"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.FragmentPrimitiveLogin">




        <TextView
            android:fontFamily="@font/sahelblack"
            android:id="@+id/txtMehmansara"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:textColor="@color/popaGreenApp"
            android:text="@string/app_name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/sahelbold"
            android:layout_below="@+id/txtMehmansara"
            android:id="@+id/text"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:textColor="@color/colorSolidBtnShape"
            android:text="@string/t2"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="30dp"
            android:layout_below="@+id/text"
            android:id="@+id/animation_activityPrimitiveLogin_lockAnimation"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lockloginprimitive" />
        <EditText
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/sahelmamoli"
            android:inputType="numberPassword"
            android:id="@+id/edt_activityPrimitiveLogin_edtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/animation_activityPrimitiveLogin_lockAnimation"
            android:layout_margin="40dp"
            android:background="@drawable/edt_shape_2"
            android:gravity="center"
            android:hint="رمز ورود" />





        <android.widget.Button
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/edt_activityPrimitiveLogin_edtPassword"
            android:fontFamily="@font/sahelbold"
            android:id="@+id/btn_activityPrimitiveLogin_btnLogin"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:background="@drawable/btn_shape3"
            android:gravity="center"
            android:text="@string/txt1"
            android:layout_width="match_parent"
            android:layout_height="50dp" />








    </RelativeLayout>

</layout>


<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_fragmentLoginAcount_Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorToolbar"
            android:layoutDirection="rtl">

            <ImageView
                android:id="@+id/img_fragmentLoginAcount_imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fontFamily="@font/sahelbold"
                android:gravity="center"
                android:text="@string/t3"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </RelativeLayout>

    <LinearLayout
        android:background="@color/myfavoriteBg"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/myfavoriteBg"
                android:layoutDirection="rtl"
                tools:context=".view.fragments.FragmentLoginAcount">



                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_activitySignin_lockAnimation"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/locksignin" />


                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/edtUserNameSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/animation_activitySignin_lockAnimation"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edt_shape_2"
                    android:drawableRight="@drawable/ic_edt_username"
                    android:fontFamily="@font/sahelmamoli"
                    android:gravity="center"
                    android:hint="کلمه عبور"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:textSize="16sp" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/edtpassSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/edtUserNameSignIn"
                    android:layout_margin="40dp"
                    android:background="@drawable/edt_shape_2"
                    android:drawableRight="@drawable/ic_edt_lock"
                    android:fontFamily="@font/sahelmamoli"
                    android:gravity="center"
                    android:hint="رمز ورود"
                    android:inputType="textPassword"
                    android:paddingStart="20dp"
                    android:textSize="16sp" />


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/chk_activityUserSignin_chkShowPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtpassSignIn"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:text="نمایش کلمه عبور"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <android.widget.Button
                    android:layout_below="@+id/fragmentLoginAcount_progressbar"
                    android:id="@+id/btn_activityUserSignin_btnLogin"
                    android:layout_width="match_parent"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_shape3"
                    android:fontFamily="@font/sahelbold"
                    android:gravity="center"
                    android:text="@string/txt1"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/fragmentLoginAcount_progressbar"
                    style="@style/SpinKitView.Large.Circle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/chk_activityUserSignin_chkShowPass"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:visibility="gone"
                    app:SpinKit_Color="@color/colorProgressbar" />


            </RelativeLayout>




        </ScrollView>


    </LinearLayout>



    </LinearLayout>





</layout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layoutDirection="rtl">

            <com.google.android.material.navigation.NavigationView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layoutDirection="rtl">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/lin_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorToolbar"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_header_layout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/guest_name_toolbarrr" />

                        <TextView
                            android:id="@+id/txt_header_layout_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/sahelblack"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="14sp" />


                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rel_signInAcount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lin_header"
                        android:background="@color/colorToolbar"
                        android:gravity="right"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:id="@+id/img_lock"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="16dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/white_lock" />

                        <TextView
                            android:id="@+id/txvSign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/img_lock"
                            android:fontFamily="@font/sahelsemibold"
                            android:padding="6dp"
                            android:text="@string/t3"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                    </RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myfavoriteBg"
        android:layoutDirection="rtl">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:cardBackgroundColor="@color/myYellow"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lilsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_number_suite"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_suite_room" />

                    <TextView
                        android:id="@+id/txt_item_recyclerSuitePrice_suiteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:fontFamily="@font/sahelbold"
                        android:padding="4dp"
                        android:textColor="@color/cobalt"
                        android:textSize="13sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/popaGreenApp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp">


                    <ImageView
                        android:id="@+id/imgIconName"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_price_suite" />

                    <TextView
                        android:id="@+id/txt_item_recycler_suiteprice_txtSpacialCustomer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/imgIconName"
                        android:ellipsize="end"
                        android:fontFamily="@font/sahelsemibold"
                        android:maxLines="1"
                        android:text="@string/txt30"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_item_recycler_suiteprice_SpacialCustomer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/txt_item_recycler_suiteprice_txtSpacialCustomer_price"
                        android:ellipsize="end"
                        android:fontFamily="@font/sahelsemibold"
                        android:maxLines="1"
                        android:textColor="@color/emerald"
                        android:textSize="13sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp">


                    <ImageView
                        android:id="@+id/imgIcon2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_money" />

                    <TextView
                        android:id="@+id/txt_item_recycler_suiteprice_txtSpacialMazadCustomer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/imgIcon2"
                        android:ellipsize="end"
                        android:fontFamily="@font/sahelsemibold"
                        android:maxLines="1"
                        android:text="@string/txt31"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_item_recycler_suiteprice_SpacialMazadCustomer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/txt_item_recycler_suiteprice_txtSpacialMazadCustomer_price"
                        android:ellipsize="end"
                        android:fontFamily="@font/sahelsemibold"
                        android:maxLines="1"
                        android:textColor="@color/weibo"
                        android:textSize="13sp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/popaGreenApp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp">


                    <ImageView
                        android:id="@+id/imgIcon3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_price_suite" />

                    <TextView
                        android:id="@+id/txt_item_recycler_suiteprice_txtCustomer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/imgIcon3"
                        android:ellipsize="end"
                        android:fontFamily="@font/sahelsemibold"
                        android:maxLines="1"
                        android:text="@string/txt28"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_item_recycler_suiteprice_Customer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/txt_item_recycler_suiteprice_txtCustomer_price"
                        android:ellipsize="end"
                        android:fontFamily="@font/sahelsemibold"
                        android:maxLines="1"
                        android:textColor="@color/emerald"
                        android:textSize="13sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp">


                    <ImageView
                        android:id="@+id/imgIcon4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_money" />

                    <TextView
                        android:id="@+id/txt_item_recycler_suiteprice_txtMazadCustomer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/imgIcon4"
                        android:ellipsize="end"
                        android:fontFamily="@font/sahelsemibold"
                        android:maxLines="1"
                        android:text="@string/txt31"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_item_recycler_suiteprice_MazadCustomer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/txt_item_recycler_suiteprice_txtMazadCustomer_price"
                        android:ellipsize="end"
                        android:fontFamily="@font/sahelsemibold"
                        android:maxLines="1"
                        android:textColor="@color/weibo"
                        android:textSize="13sp" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearEditPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_number_suite"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_edite_price" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:fontFamily="@font/sahelbold"
                        android:padding="4dp"
                        android:text="@string/txt29"
                        android:textColor="@color/emerald"
                        android:textSize="10sp" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</layout>

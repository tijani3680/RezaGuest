<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_fragmentLoginAcount_Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorToolbar"
            android:layoutDirection="rtl">

            <ImageView
                android:id="@+id/img_fragmentCreateOperator_imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fontFamily="@font/sahelbold"
                android:gravity="center"
                android:text="@string/txt17"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/myfavoriteBg">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/myfavoriteBg"
                    android:layoutDirection="rtl"
                    tools:context=".view.fragments.FragmentLoginAcount">


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_fragmentCreateOperator_lockAnimation"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/locksignin" />


                    <EditText
                        android:id="@+id/edt_fragmentCreateOperator_edtFullName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/animation_fragmentCreateOperator_lockAnimation"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edt_shape_2"
                        android:drawableRight="@drawable/ic_person"
                        android:fontFamily="@font/sahelmamoli"
                        android:gravity="center"
                        android:hint="@string/e15"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_fragmentCreateOperator_idOperator"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/edt_fragmentCreateOperator_edtFullName"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edt_shape_2"
                        android:drawableRight="@drawable/ic_operator_id"
                        android:fontFamily="@font/sahelmamoli"
                        android:gravity="center"
                        android:hint="@string/e16"
                        android:inputType="number"
                        android:paddingStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_fragmentCreateOperator_userName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/edt_fragmentCreateOperator_idOperator"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edt_shape_2"
                        android:drawableRight="@drawable/ic_edt_username"
                        android:fontFamily="@font/sahelmamoli"
                        android:gravity="center"
                        android:hint="@string/e17"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edt_fragmentCreateOperator_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/edt_fragmentCreateOperator_userName"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edt_shape_2"
                        android:drawableRight="@drawable/ic_edt_lock"
                        android:fontFamily="@font/sahelmamoli"
                        android:gravity="center"
                        android:hint="@string/e19"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.github.ybq.android.spinkit.SpinKitView
                        android:id="@+id/fragmentCreateOperator_progressbar"
                        style="@style/SpinKitView.Large.Circle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/edt_fragmentCreateOperator_password"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:visibility="gone"
                        app:SpinKit_Color="@color/colorProgressbar" />


                    <android.widget.Button
                        android:id="@+id/fragmentCreateOperator_btnConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/fragmentCreateOperator_progressbar"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="70dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/btn_shape3"
                        android:fontFamily="@font/sahelbold"
                        android:gravity="center"
                        android:text="@string/e18"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                </RelativeLayout>


            </ScrollView>


        </LinearLayout>


    </LinearLayout>


</layout>
